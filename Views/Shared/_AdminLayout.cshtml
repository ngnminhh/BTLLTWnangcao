<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLTV.styles.css" asp-append-version="true" />
    <style>
        tr {
            vertical-align: middle;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="./homepage">QLTV</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="./books_manage">Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./account_manage">Người dùng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Thẻ mượn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./category_manage">Danh mục</a>
                    </li>
                </ul>
                <a href="" class="btn btn-danger">Đăng xuất</a>
            </div>
        </div>
    </nav>

    <div class="main">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Nguyễn Minh Hòa
        </div>
    </footer>
</body>

</html>